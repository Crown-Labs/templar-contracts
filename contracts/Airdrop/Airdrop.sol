interface IERC20 {
    function decimals() external view returns (uint8);
    function balanceOf(address account) external view returns (uint256);
    function transfer(address recipient, uint256 amount) external returns (bool);
    function approve(address spender, uint256 amount) external returns (bool);
    function totalSupply() external view returns (uint256);
    function transferFrom(address sender, address recipient, uint256 amount) external returns (bool);
    event Transfer(address indexed from, address indexed to, uint256 value);
    event Approval(address indexed owner, address indexed spender, uint256 value);
}

contract Airdrop is Ownable {

  IERC20 public token;

  event TransferredToken(address indexed to, uint256 value);

  constructor (address _token) {
      require(_token != address(0), "address invalid");
      token = IERC20(_token);
  }

  // this function can be used when you want to send same number of tokens to all the recipients
  function sendAirdrop(address[] memory _recipient, uint256 _amount) onlyOwner external {
    require((_amount * _recipient.length) <= token.balanceOf(address(this)), "balance insufficient");
    
    uint256 i = 0;
    while (i < _recipient.length) {
        require(_recipient[i] != address(0), "address invalid");

        // transfer token
        token.transfer(_recipient[i], _amount);

        emit TransferredToken(_recipient[i], _amount);
        i++;
    }
  }  

  function revoke() onlyOwner external {
    token.transfer(msg.sender, token.balanceOf(address(this)));
  }

  function balance() external view returns (uint256) {
    return token.balanceOf(address(this));
  }
}