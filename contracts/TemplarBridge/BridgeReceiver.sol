contract BridgeReceiver is Ownable, Pausable {
    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    address public immutable wSWORD;
    address public immutable DAO;
    mapping(address => bool) public worker;
    mapping(uint256 => bool) public chainList;
    uint256 public threshold = 3;
    uint256 public faucet = 1000000000000000; // 0.001 BNB
    uint256 public fee = 25; // 0.25%

    mapping (address => mapping(bytes32 => bool)) public workerConfirm;
    mapping (bytes32 => uint256) public queue;
    mapping (uint256 => mapping(uint256 => bool)) public release;

    modifier onlyWorker() {
        require(worker[msg.sender], "Worker: caller is not the worker");
        _;
    }

    event WorkerConfirm(uint256 indexed _chainId, uint256 indexed _uid, address _to, uint256 _amount, uint256 _queue);
    event Release(uint256 indexed _chainId, uint256 indexed _uid);

    // ------------------------------
    // contruct
    // ------------------------------
    constructor(address _wSWORD, address _DAO) {
        require(_wSWORD != address(0));
        require(_DAO != address(0));
        wSWORD = _wSWORD;
        DAO = _DAO;
    }

    function getBalance() public view returns (uint256) {
        return IERC20(wSWORD).balanceOf(address(this));
    }

    function getIndexRatio(uint256 _index) public view returns (uint256) {
        uint256 _nativeIndex = IWrapSWORD(wSWORD).swordIndex();
        return _index.mul(10**18).div(_nativeIndex);
    }

    function getWorkerConfirm(address _worker, uint256 _chainId, uint256 _uid, address _to, uint256 _amount, uint256 _index) external view returns (bool) {
        bytes32 hash = getHash(_chainId, _uid, _to, _amount, _index);
        return workerConfirm[_worker][hash];
    }

    function getQueue(uint256 _chainId, uint256 _uid, address _to, uint256 _amount, uint256 _index) external view returns (uint256) {
        bytes32 hash = getHash(_chainId, _uid, _to, _amount, _index);
        return queue[hash];
    }

    function getRelease(uint256 _chainId, uint256 _uid) external view returns (bool) {
        return release[_chainId][_uid];
    }

    function getHash(uint256 _chainId, uint256 _uid, address _to, uint256 _amount, uint256 _index) public pure returns (bytes32) {
        return keccak256(abi.encodePacked(_chainId, _uid, _to, _amount, _index));
    }

    // ------------------------------
    // onlyWorker
    // ------------------------------
    function confirm(uint256 _chainId, uint256 _uid, address _to, uint256 _amount, uint256 _index) external whenNotPaused onlyWorker {
        require(chainList[_chainId], "chainId is not allow");
        require(_to != address(0), "address invalid");
        require(_amount != 0, "!amount");
        require(_index != 0, "!index");
        require(!release[_chainId][_uid], "release exist");

        // check hash
        bytes32 _hash = getHash(_chainId, _uid, _to, _amount, _index);
        require(!workerConfirm[msg.sender][_hash], "worker already confirm");

        // check balance
        uint256 _ratio = getIndexRatio(_index); // index ratio
        uint256 _balance = _amount.mul(_ratio).div(10**18); // convert wrap balance
        uint256 _fee = _balance.mul(fee).div(10000); // fee
        require(_balance <= getBalance(), "insufficient balance");

        // queue
        queue[_hash]++;
        workerConfirm[msg.sender][_hash] = true;

        emit WorkerConfirm(_chainId, _uid, _to, _amount, queue[_hash]);

        if (queue[_hash] < threshold) {
            return;
        } 

        // release
        release[_chainId][_uid] = true;

        // transfer
        if (_fee > 0) {
            IERC20(wSWORD).safeTransfer(DAO, _fee);
        }
        IERC20(wSWORD).safeTransfer(_to, _balance.sub(_fee));

        // faucet
        if (faucet > 0 && faucet <= address(this).balance && !Address.isContract(_to)) {
            payable(_to).transfer(faucet);
        }

        emit Release(_chainId, _uid);
    }

    // ------------------------------
    // onlyOwner
    // ------------------------------
    function setPause(bool _flag) external onlyOwner {
        if (_flag) {
            _pause();
        } else {
            _unpause();
        }
    }

    function setWorker(address _worker, bool _allow) external onlyOwner {
        require(_worker != address(0), "address invalid");
        worker[_worker] = _allow;
    }

    function setChainList(uint256 _chainId, bool _allow) external onlyOwner {
        require(_chainId != 0, "!chainId");
        chainList[_chainId] = _allow;
    }

    function setThreshold(uint256 _threshold) external onlyOwner {
        require(_threshold > 0, "must more than 0");
        threshold = _threshold;
    }

    function setFaucet(uint256 _faucet) external onlyOwner {
        faucet = _faucet;
    }

    function setFee(uint256 _fee) external onlyOwner {
        require(_fee <= 200, "fee <= 2%");
        fee = _fee;
    }

    function resetQueue(uint256 _chainId, uint256 _uid, address _to, uint256 _amount, uint256 _index, address[] memory _workers) external onlyOwner {
        bytes32 _hash = getHash(_chainId, _uid, _to, _amount, _index);
        queue[_hash] = 0;

        for (uint256 i = 0; i < _workers.length; i++) {
            address _worker = _workers[i];
            require(worker[_worker], "address is not the worker");

            workerConfirm[_worker][_hash] = false;
        }
    }

    function sendTokens(address _token, address recipient, uint256 _amount) external onlyOwner {
        require(IERC20(_token).balanceOf(address(this)) >= _amount, "Not enough tokens");
        IERC20(_token).transfer(recipient, _amount);
    }

    function withdraw(uint256 _amount) external onlyOwner {
        payable(msg.sender).transfer(_amount);
    }

    receive() external payable {}
}